{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "notion-tasks",
  "title": "Notion Tasks",
  "description": "Manages tasks created in a database in Notion",
  "icon": "chechecklist.png",
  "author": "rlpennell",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Tasks",
      "description": "Manages tasks created in a database in Notion",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@notionhq/client": "^2.2.1",
    "@raycast/api": "^1.41.1",
    "date-fns": "^2.29.3"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
